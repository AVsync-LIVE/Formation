{
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react",
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "types",
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "paths": {
      "react": [ "./node_modules/@types/react" ]
    }
  },
  "exclude": [
    "**/*.stories.tsx"
  ]
}
